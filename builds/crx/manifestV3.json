{
  "name": "4chan XT",
  "version": "2.22.0",
  "manifest_version": 3,
  "description": "4chan XT is a script that adds various features to anonymous imageboards.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "js": [
        "script.js"
      ],
      "matches": [
        "https://*.4chan.org/*",
        "https://*.4cdn.org/*",
        "https://erischan.org/*",
        "https://www.erischan.org/*",
        "https://fufufu.moe/*",
        "https://kakashinenpo.com/*",
        "https://www.kakashinenpo.com/*",
        "https://kissu.moe/*",
        "https://www.kissu.moe/*",
        "https://original.kissu.moe/*",
        "https://lainchan.org/*",
        "https://www.lainchan.org/*",
        "https://merorin.com/*",
        "https://ota-ch.com/*",
        "https://www.ota-ch.com/*",
        "https://ponyville.us/*",
        "https://www.ponyville.us/*",
        "https://smuglo.li/*",
        "https://notso.smuglo.li/*",
        "https://smugloli.net/*",
        "https://smug.nepu.moe/*",
        "https://sportschan.org/*",
        "https://www.sportschan.org/*",
        "https://sushigirl.us/*",
        "https://www.sushigirl.us/*",
        "https://tvch.moe/*"
      ],
      "exclude_matches": [
        "https://www.4chan.org/advertise",
        "https://www.4chan.org/advertise?*",
        "https://www.4chan.org/donate",
        "https://www.4chan.org/donate?*",
        "https://www.4chan.org/"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "eventPage.js"
  },
  "homepage_url": "https://github.com/TuxedoTako/4chan-xt",
  "minimum_chrome_version": "90",
  "applications": {
    "gecko": {
      "id": "4chan-x@4chan-x.net"
    }
  },
  "permissions": [
    "storage",
    "scripting",
    "webRequest"
  ],
  "host_permissions": [
    "https://*.4chan.org/*",
    "https://*.4cdn.org/*",
    "https://erischan.org/*",
    "https://www.erischan.org/*",
    "https://fufufu.moe/*",
    "https://kakashinenpo.com/*",
    "https://www.kakashinenpo.com/*",
    "https://kissu.moe/*",
    "https://www.kissu.moe/*",
    "https://original.kissu.moe/*",
    "https://lainchan.org/*",
    "https://www.lainchan.org/*",
    "https://merorin.com/*",
    "https://ota-ch.com/*",
    "https://www.ota-ch.com/*",
    "https://ponyville.us/*",
    "https://www.ponyville.us/*",
    "https://smuglo.li/*",
    "https://notso.smuglo.li/*",
    "https://smugloli.net/*",
    "https://smug.nepu.moe/*",
    "https://sportschan.org/*",
    "https://www.sportschan.org/*",
    "https://sushigirl.us/*",
    "https://www.sushigirl.us/*",
    "https://tvch.moe/*"
  ],
  "optional_host_permissions": [
    "*://*/"
  ]
}